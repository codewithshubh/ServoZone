<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout_service_booking_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border"
        android:elevation="6dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="3dp"
        app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/layout_service_booking_iv"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/placeholder"
                    />


                <RelativeLayout
                    android:id="@+id/rl_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_below="@id/layout_service_booking_iv"
                    android:layout_margin="1dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/layout_service_booking_category_title"
                        android:layout_width="wrap_content"
                        android:textAlignment="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:text="ddddddddd frfrr rgfrrgfr rrffr  rfrfr rfrfrf rfrfrfrf rfrfrddddddgg"
                        android:textSize="14sp" />

                </RelativeLayout>

                <Button
                    android:id="@+id/layout_service_booking_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:clickable="true"
                    android:text="Book Service"
                    android:textColor="@color/azureBlue"
                    android:background="@drawable/border_dotted"
                    android:layout_below="@+id/rl_tv">

                </Button>

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/layout_service_booking_avi"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="44dp"
                    android:visibility="visible"
                    app:indicatorColor="@color/azureBlue"
                    style="@style/AVLoadingIndicatorView"
                    app:indicatorName="BallSpinFadeLoaderIndicator"/>

            </RelativeLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>

