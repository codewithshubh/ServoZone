<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_home_header"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:elevation="6dp"
        android:layout_marginLeft="8dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/iv_service_header"
                    android:layout_width="250dp"
                    android:layout_height="170dp"
                    android:scaleType="fitXY" />

            <RelativeLayout
                android:id="@+id/layout_mov"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignBottom="@+id/iv_service_header"
                android:background="#660080FF"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_service_header_title"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffffff"
                    android:text="Window AC Repairing"
                    android:textStyle="bold"
                    android:textSize="14sp" />

            </RelativeLayout>

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/service_header_avi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:visibility="visible"
                app:indicatorColor="@color/azureBlue"
                style="@style/AVLoadingIndicatorView" />


        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>