<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.BookingDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/activity_booking_detail_appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/activity_booking_detail_toolbar"
                android:minHeight="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:titleMarginStart="30dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/activity_booking_detail_toolbar_icon"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_centerVertical="true"
                        android:src="@drawable/left_arrow_light"/>

                    <TextView
                        android:id="@+id/activity_booking_detail_toolbar_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/activity_booking_detail_toolbar_icon"
                        android:fontFamily="@font/aclonica"
                        android:text="Booking Details"
                        android:textColor="@color/azureBlue"
                        android:textSize="20dp" />
                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/divider_light"/>
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/activity_booking_detail_swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/activity_booking_detail_nsv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eee"
                android:layout_gravity="fill_vertical"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/activity_booking_detail_cv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:elevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp">

                                <TextView
                                    android:id="@+id/activity_booking_detail_bookingid_title_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:text="Booking ID - "
                                    />

                                <TextView
                                    android:id="@+id/activity_booking_detail_bookingid_tv"
                                    android:layout_toRightOf="@+id/activity_booking_detail_bookingid_title_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:text="ON100001"
                                    />

                            </RelativeLayout>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:src="@drawable/divider_light"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingLeft="15dp"
                                android:paddingRight="10dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp">

                                <LinearLayout
                                    android:id="@+id/activity_booking_detail_heading_lin"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="130dp"
                                    android:layout_centerVertical="true"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/activity_booking_detail_category_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="@color/black"
                                        android:text="Split AC Servicing" />

                                    <TextView
                                        android:id="@+id/activity_booking_detail_service_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:text="AC  Repair &amp; Services" />

                                    <TextView
                                        android:id="@+id/activity_booking_detail_provider_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:textSize="10dp"
                                        android:text="Service Provider: Topline Services" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="10dp">

                                        <TextView
                                            android:id="@+id/activity_booking_detail_status_title_tv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:textSize="14sp"
                                            android:textColor="@color/azureBlue"
                                            android:text="Status: "
                                            />

                                        <TextView
                                            android:id="@+id/activity_booking_detail_status_tv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:textSize="16sp"
                                            android:paddingRight="15dp"
                                            android:paddingLeft="15dp"
                                            android:paddingTop="5dp"
                                            android:paddingBottom="5dp"
                                            android:background="@drawable/btn_pending"
                                            android:textColor="@color/white"
                                            android:text="Pending"
                                            />

                                    </LinearLayout>



                                </LinearLayout>

                                <androidx.cardview.widget.CardView
